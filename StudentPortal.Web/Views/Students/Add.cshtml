<!-- take data from html form and add to the AddStudentsViewModel -->
<!-- Binding the model to .cshtml -->
@model StudentPortal.Web.Models.AddStudentsViewModel


<h1>Add Student</h1>

<form method="post">

<div class="mt-3">
    <label class="form-label" for="name">Name</label>
    <input type="text" class="form-control" id="name" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label" for="email">Email</label>
    <input type="text" class="form-control" id="email" asp-for="Email"/>
</div>

<div class="mt-3">
    <label class="form-label" for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" asp-for="Phone"/>
</div>

<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed"/>
    <label class="form-check-label" for="subscribed">Subscribed</label>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>